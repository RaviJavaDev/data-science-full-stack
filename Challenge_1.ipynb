    "# download all the assignment from dashboard\n",
    "# read the file name and create seprate folder for common name like Assignment_1.docx,Assignment_2.docx create folder\n",
    "# assignment and dump all Assignment_ file in that folder\n",
    "# # read the file name and create seprate folder for common name like Programming_Assignment_1.docx,\n",
    "# Programming_Assignment_2.docx create folder Programming_Assignment and dump all Programming_Assignment_ file in that folder\n",
    "# For repetitive assignment like if there are 2 Assignment_1.docx then for second rename as Assignment_1_2.docx\n",
    "# once all files moved to Assignment & Programming_Assignment folder then merge all files in resp. folder into\n",
    "# single file i.e. in assignment folder there will be only one file and in that file we will have questions from \n",
    "# each file like heading as Assignment_1 then all questions and so on."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 9,
   "metadata": {
    "scrolled": true
   },
   "outputs": [],
   "source": [
    "import os\n",
    "import re\n",
    "import shutil\n",
    "import docx\n",
    "import logging\n",
    "import glob\n",
    "\n",
    "class FileUtils:\n",
    "    def __init__(self,src,dest):\n",
    "        self.src=src\n",
    "        self.dest=dest\n",
    "        \n",
    "    def move_files(self,logging):\n",
    "        \"\"\"\n",
    "        Moves the files from source folder to destination Assignment or Programming_Assignment\n",
    "        folder.\n",
    "        \"\"\"\n",
    "        logging.info('in move_files')\n",
    "        try:\n",
    "            for file_name in os.listdir():\n",
    "                if '.docx' in file_name:\n",
    "                    logging.info('dir_name : {} file_name: {}'.format(os.getcwd(),file_name))\n",
    "                    if re.search('^Assignment.',file_name):\n",
    "                        os.makedirs(self.dest+'\\\\Assignment', exist_ok=True)\n",
    "                        file = glob.glob(os.path.join(self.dest,'Assignment',file_name.split('.')[0] + '_'+'*'+'.docx'))\n",
    "                        if(len(file)>0):\n",
    "                            logging.info(f'file_name 2 =  {file_name}');\n",
    "                            shutil.move(self.src+'\\\\'+file_name,self.dest+'\\\\Assignment\\\\'+\n",
    "                                        file_name.split('_')[0]+'_'+file_name.split('_')[1].split('.')[0]+'_2'+'.docx')\n",
    "                            logging.info('file {} moved to {}'.format(file_name,self.dest))\n",
    "                        else:\n",
    "                            logging.info(f'file_name 1 =  {file_name}');\n",
    "                            shutil.move(self.src+'\\\\'+file_name,self.dest+'\\\\Assignment\\\\'+\n",
    "                                        file_name.split('_')[0]+'_'+file_name.split('_')[1].split('.')[0]+'_1'+'.docx')\n",
    "                            logging.info('file {} moved to {}'.format(file_name,self.dest))\n",
    "                    elif re.search('^Programming.',file_name):\n",
    "                        os.makedirs(self.dest+'\\\\Programming_Assignment', exist_ok=True)\n",
    "                        file = glob.glob(os.path.join(self.dest,'Programming_Assignment',file_name.split('.')[0] + '_'+'*'+'.docx'))\n",
    "                        if(len(file)>0):\n",
    "                            logging.info(f'file_name 2 =  {file_name}');\n",
    "                            shutil.move(self.src+'\\\\'+file_name,self.dest+'\\\\Programming_Assignment\\\\'\n",
    "                                        +file_name.split('_')[0]+'_'+file_name.split('_')[1].split('.')[0]+'_2'+'.docx')\n",
    "                            logging.info('file {} moved to {}'.format(file_name,self.dest))\n",
    "                        else:\n",
    "                            logging.info(f'file_name 1 =  {file_name}');\n",
    "                            shutil.move(self.src+'\\\\'+file_name,self.dest+'\\\\Programming_Assignment\\\\'\n",
    "                                        +file_name.split('_')[0]+'_'+file_name.split('_')[1].split('.')[0]+'_1'+'.docx')\n",
    "                            logging.info('file {} moved to {}'.format(file_name,self.dest))\n",
    "        except Exception as e:\n",
    "            logging.error('error occured while moving files {}'.format(e))\n",
    "    \n",
    "    def combine_files(self,logging):\n",
    "        \"\"\"\n",
    "        combine files\n",
    "        \"\"\"\n",
    "        logging.info('in combine_files')\n",
    "        try:\n",
    "            for dir_name in os.listdir(self.dest):\n",
    "                logging.info(f'dir_name =  {dir_name}');\n",
    "                if os.path.isdir(dir_name) and not dir_name.startswith('.') and (dir_name == 'Assignment' or dir_name == 'Programming_Assignment'):\n",
    "                    doc1 = docx.Document()\n",
    "                    for file_name in os.listdir(dir_name):\n",
    "                        if '.docx' in file_name:\n",
    "                            logging.info(f'reading file  =  {file_name}');\n",
    "                            doc = docx.Document(self.dest+'\\\\'+dir_name+'\\\\'+file_name)\n",
    "                            doc1.add_heading(file_name.split('.')[0])\n",
    "                            for para in doc.paragraphs:\n",
    "                                doc1.add_paragraph(para.text)\n",
    "                            doc1.add_page_break()\n",
    "                    logging.info('saving file  = {}'.format(os.getcwd()+'\\\\'+dir_name+'.docx'));        \n",
    "                    doc1.save(self.dest+'\\\\'+ dir_name+'.docx')\n",
    "        except Exception as e:\n",
    "            logging.error('error occured while combining files {}'.format(e))\n",
    "\n",
    "if __name__ == \"__main__\":\n",
    "    # For testing use local sys Downloads path\n",
    "    os.chdir(r'C:\\Users\\TiaaUser\\Downloads')\n",
    "    os.makedirs('log',exist_ok=True)\n",
    "    logging.basicConfig(filename=os.path.join(os.getcwd(),'log','log.txt'),level=logging.INFO,format='%(asctime)s %(levelname)s %(message)s')\n",
         # Pass target folder to move file in FileUtils 2nd parameter
    "    file_utils = FileUtils(os.getcwd(),r'C:\\Ravis\\Data Science\\Full Stack DS\\Python\\Assignments')\n",
    "    file_utils.move_files(logging)\n",
    "    file_utils.combine_files(logging)\n",
    "    logging.shutdown()\n"
   ]
  },
